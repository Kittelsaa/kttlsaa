          The stuff I geek out about; a list of books, different media & the people whose work I admireü™ê
        </p>
      </div>

      <div class="stream-grid">
        {streamItems.map((item) => (
          <a href={item.link} class="stream-item" target="_blank" rel="noopener noreferrer">
            <div class="item-image-container">
              <img src={item.image} alt={item.title} class="item-image" />
            </div>
            
            <div class="item-content">
              <h2 class="item-title">{item.title}</h2>
              
              <div class="item-meta">
                <p>{item.author}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </PageWrapper>
</Layout>

<style>
  .stream-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    overflow-x: hidden;
  }
  
  /* Stream Introduction - Styled like Garden intro */
  .stream-intro {
    margin-bottom: 3.5rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 1.5rem;
  }
  
  .stream-title {
    font-family: "Times New Roman", Times, serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1.25rem;
  }
  
  .stream-description {
    font-size: 1rem;
    color: #6b7280;
    max-width: 800px;
    line-height: 1.6;
    margin: 0 0 1.5rem;
  }
  
  .stream-link {
    color: #000000;
    text-decoration: none;
    border-bottom: 1px dotted #000000;
    transition: all 0.2s ease;
  }
  
  .stream-link:hover {
    color: #ff8c00;
    border-bottom: 1px solid #ff8c00;
  }

  .stream-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .stream-item {
    display: flex;
    flex-direction: column;
    background-color: #f9fafb;
    border: 2px solid #e5e7eb;
    border-radius: 0;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
  }
  
  .stream-item:hover {
    background-color: #f3f4f6;
    border-bottom: 2px solid var(--color-accent, #ff8c00);
  }

  .item-image-container {
    width: 100%;
    padding-top: 100%; /* Square aspect ratio */
    position: relative;
    overflow: hidden;
    background-color: #f3f4f6;
  }

  .item-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .item-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .item-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: #1f2937;
    line-height: 1.3;
  }
  
  .stream-item:hover .item-title {
    color: #000;
  }

  .item-meta {
    margin-top: auto;
  }

  .item-meta p {
    margin: 0;
    font-size: 0.9rem;
    color: #6b7280;
    line-height: 1.5;
  }

  @media (max-width: 1024px) {
    .stream-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .item-title {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .stream-container {
      padding: 2rem 1rem;
    }
    
    .stream-title {
      font-size: 2rem;
    }
    
    .stream-description {
      font-size: 1rem;
    }
    
    .stream-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.25rem;
    }
    
    .item-content {
      padding: 1rem;
    }
    
    .item-title {
      font-size: 1rem;
      margin-bottom: 0.5rem;
    }
    
    .item-meta p {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .stream-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .item-image-container {
      padding-top: 100%; /* Square on mobile */
    }
    
    .item-content {
      padding: 0.75rem;
    }
    
    .item-title {
      font-size: 0.9rem;
      margin-bottom: 0.4rem;
    }
    
    .item-meta p {
      font-size: 0.75rem;
      line-height: 1.3;
    }
  }

  @media (max-width: 360px) {
    .stream-grid {
      grid-template-columns: 1fr;
    }
    
    .item-image-container {
      padding-top: 66.67%; /* 3:2 aspect ratio on very small screens */
    }
  }
</style>






