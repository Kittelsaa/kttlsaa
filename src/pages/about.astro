---
import Layout from "../layouts/Layout.astro";
import PageWrapper from "../components/layouts/PageWrapper.astro";
import AboutMe from "../components/AboutMe.astro";
import "../styles/about.css";
---

<Layout title="About Me - KTTLSAA">
  <PageWrapper>
    <div class="about-container">
      <div class="about-content">
        <AboutMe />
      </div>
    </div>
  </PageWrapper>
</Layout>

<style is:global>
  /* Fix for social links spacing */
  .social-list {
    list-style-type: none !important;
    padding: 0 !important;
    display: flex !important;
    flex-wrap: wrap !important;
    gap: 1.5rem !important;
  }
  
  .social-list li {
    margin-right: 1.5rem !important;
  }
  
  /* Ensure section titles have the right color */
  .section-title {
    color: #6b7280 !important;
    font-size: 1.1rem !important;
    text-transform: uppercase !important;
    letter-spacing: 0.05em !important;
    margin-bottom: 0.75rem !important;
    font-weight: 600 !important;
  }
  
  /* Ensure highlighted text is orange */
  .philosophy-paragraph {
    color: #000 !important;
    font-weight: 500 !important;
    font-style: italic !important;
  }
  
  /* Fix social links that are not in a list */
  .social-section a {
    margin-right: 1.5rem !important;
    display: inline-block !important;
  }
</style>

<style>
  /* Increase width for about page specifically */
  .about-content {
    max-width: 100%; /* Use full width */
    margin: 0;
    padding: 0;
  }
  
  /* Custom spacing for the about page */
  .about-container {
    padding-top: 1rem;
    padding-bottom: 4rem;
  }
  
  /* Add more horizontal spacing */
  @media (min-width: 768px) {
    .about-container {
      padding-left: 3rem; /* Increased from 2rem */
      padding-right: 3rem; /* Increased from 2rem */
    }
  }
  
  .about-title {
    text-align: left;
    margin-left: 0;
    padding-left: 0;
    margin-bottom: 2rem; /* Add more space below title */
  }
</style>





