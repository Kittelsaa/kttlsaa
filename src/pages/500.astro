---
import Layout from "../layouts/Layout.astro";
import PageWrapper from "../components/layouts/PageWrapper.astro";

// Access the error prop that Astro automatically passes to this page
const { error } = Astro.props;
---

<Layout title="500 - Server Error | KTTLSAA">
  <PageWrapper>
    <div class="error-container">
      <h1>500</h1>
      <h2>Server Error</h2>
      <p>Something went wrong on our end. Please try again later.</p>
      <div class="actions">
        <a href="/" class="button primary">Return Home</a>
        <a href="/garden" class="button secondary">Explore the Garden</a>
      </div>
      
      {import.meta.env.DEV && error && (
        <div class="dev-error">
          <h3>Developer Information:</h3>
          <pre>{error.message}</pre>
          <pre>{error.stack}</pre>
        </div>
      )}
    </div>
  </PageWrapper>
</Layout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60vh;
    padding: 2rem;
  }

  h1 {
    font-size: 6rem;
    margin: 0;
    color: var(--color-primary, #333);
    line-height: 1;
  }

  h2 {
    font-size: 2rem;
    margin: 0.5rem 0 1.5rem;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    max-width: 500px;
  }

  .actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .primary {
    background-color: var(--color-primary, #333);
    color: white;
  }

  .primary:hover {
    background-color: var(--color-primary-dark, #222);
  }

  .secondary {
    border: 2px solid var(--color-primary, #333);
    color: var(--color-primary, #333);
  }

  .secondary:hover {
    background-color: var(--color-primary-light, #eee);
  }

  .dev-error {
    margin-top: 2rem;
    text-align: left;
    width: 100%;
    max-width: 800px;
    background-color: #f8f8f8;
    padding: 1rem;
    border-radius: 4px;
    overflow: auto;
  }

  .dev-error pre {
    white-space: pre-wrap;
    word-break: break-word;
  }
</style>
