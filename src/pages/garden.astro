    outline: none;
    border-color: #6b7280;
  }
  
  .dropdown-arrow {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: #6b7280;
    font-size: 0.6rem;
  }
  
  .notes-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0 3rem;
  }
  
  .garden-link {
    color: #000000;
    text-decoration: none;
    border-bottom: 1px dotted #000000;
    transition: all 0.2s ease;
  }
  
  .garden-link:hover {
    color: #ff8c00;
    border-bottom: 1px solid #ff8c00;
  }
  
  @media (max-width: 1024px) {
    .garden-layout {
      gap: 2rem;
    }
    
    .notes-list {
      gap: 0 2rem;
    }
    
    .growth-stages-legend {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
  
  @media (max-width: 768px) {
    .garden-layout {
      grid-template-columns: 1fr;
    }
    
    .container {
      padding: 2rem 1rem;
    }
    
    .garden-title {
      font-size: 2rem;
    }
    
    .garden-description {
      font-size: 1rem;
    }
    
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .notes-list {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Client-side filtering and sorting logic
  document.addEventListener('DOMContentLoaded', () => {
    const topicFilters = document.querySelectorAll('.topic-filter');
    const noteCards = document.querySelectorAll('.garden-note-card');
    const dateFilter = document.getElementById('date-filter');
    const growthFilter = document.getElementById('growth-filter');
    
    // Add "All" filter state for topics
    let currentTopicFilter = 'all';
    
    // Add event listeners to dropdown filters
    if (dateFilter) {
      dateFilter.addEventListener('change', () => {
        sortNotes(dateFilter.value);
      });
    }
    
    if (growthFilter) {
      growthFilter.addEventListener('change', () => {
        filterByGrowthStage(growthFilter.value);
      });
    }
    
    // Add click event to each topic filter
    topicFilters.forEach(filter => {
      filter.addEventListener('click', () => {
        const selectedTopic = filter.getAttribute('data-topic');
        
        // Toggle active state if clicking the same filter again
        if (currentTopicFilter === selectedTopic) {
          currentTopicFilter = 'all';
          topicFilters.forEach(f => f.classList.remove('active'));
        } else {
          // Remove active class from all filters
          topicFilters.forEach(f => f.classList.remove('active'));
          
          // Add active class to clicked filter
          filter.classList.add('active');
          currentTopicFilter = selectedTopic;
        }
        
        // Filter notes by topic
        filterByTopic(currentTopicFilter);
      });
    });
    
    // Function to sort notes by date
    function sortNotes(sortOrder) {
      const notesContainer = document.querySelector('.notes-list');
      const notesArray = Array.from(noteCards);
      
      notesArray.sort((a, b) => {
        const dateA = new Date(a.dataset.date || 0).getTime();
        const dateB = new Date(b.dataset.date || 0).getTime();
        
        return sortOrder === 'newest' ? dateB - dateA : dateA - dateB;
      });
      
      // Remove all notes and re-append in sorted order
      notesArray.forEach(note => {
        notesContainer.appendChild(note);
      });
    }
    
    // Function to filter by growth stage
    function filterByGrowthStage(growthStage) {
      noteCards.forEach(card => {
        const cardGrowthStage = card.dataset.growthStage?.toLowerCase();
        
        if (growthStage === 'all' || cardGrowthStage === growthStage) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }
    
    // Function to filter by topic
    function filterByTopic(topic) {
      noteCards.forEach(card => {
        const cardTopics = card.dataset.topics?.split(',') || [];
        
        if (topic === 'all' || cardTopics.includes(topic)) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }
    
    // Initialize sorting
    if (dateFilter) {
      sortNotes(dateFilter.value);
    }
  });
</script>







