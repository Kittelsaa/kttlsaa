---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import GardenNoteCard from "../components/cards/GardenNoteCard.astro";
import GardenCollections from "../components/garden/GardenCollections.astro";

// Add error handling for collection retrieval
let allPosts = [];
try {
  allPosts = await getCollection('notes', ({ data }) => {
    return !data.draft;
  });
  
  // Log the first few posts to debug
  if (allPosts.length > 0) {
    console.log("First post:", {
      title: allPosts[0].data.title,
      slug: allPosts[0].slug,
      id: allPosts[0].id
    });
  } else {
    console.log("No posts found");
  }
} catch (error) {
  console.error("Error fetching notes collection:", error);
}

// Sort posts by updated date
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.updated || b.data.startDate || 0).getTime() - 
            new Date(a.data.updated || a.data.startDate || 0).getTime()
);

// Get all unique topics
const allTopics = [...new Set(allPosts.flatMap(post => post.data.topics || []))].sort();

// Count notes per topic
const topicCounts = {};
allTopics.forEach(topic => {
  topicCounts[topic] = allPosts.filter(post => 
    post.data.topics && post.data.topics.includes(topic)
  ).length;
});

// Get all unique growth stages
const allGrowthStages = [...new Set(allPosts.map(post => post.data.growthStage))].sort();
---

<Layout title="Digital Garden">
  <div class="container">
    <!-- Garden Introduction Section -->
    <div class="garden-intro">
      <h1 class="garden-title">Digital Garden</h1>
      <p class="garden-description">
        A collection of growing notes, essays, and thoughts. Some are seedlings, others are fully 
        grown trees. All are continuously evolving. Read more about <a href="/notes/digital-gardens" class="garden-link">digital gardens hereüçÄ</a>.
      </p>
    </div>

    <div class="garden-layout">
      <div class="collections-column">
        <div class="section-header">
          <h2 class="section-title">ONGOING COLLECTIONS</h2>
        </div>
        <GardenCollections topics={allTopics} counts={topicCounts} />
      </div>
      
      <div class="notes-column">
        <div class="section-header">
          <h2 class="section-title">NOTES</h2>
          <div class="filter-controls">
            <div class="filter-dropdown">
              <select id="date-filter" aria-label="Filter by date">
                <option value="newest">Newest First</option>
                <option value="oldest">Oldest First</option>
              </select>
              <span class="dropdown-arrow">‚ñº</span>
            </div>
            <div class="filter-dropdown">
              <select id="growth-filter" aria-label="Filter by growth stage">
                <option value="all">All Stages</option>
                {allGrowthStages.map(stage => (
                  <option value={stage.toLowerCase()}>{stage}</option>
                ))}
              </select>
              <span class="dropdown-arrow">‚ñº</span>
            </div>
          </div>
        </div>
        <div class="notes-list">
          {sortedPosts.map(post => {
            // Debug log for each post
            console.log(`Post: ${post.data.title}, Slug: ${post.slug}, ID: ${post.id}`);
            return <GardenNoteCard note={post} />;
          })}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem 3.5rem 1.5rem;
  }
  
  /* Garden Introduction Styles */
  .garden-intro {
    margin-bottom: 3rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 1.2rem;
  }
  
  .garden-title {
    font-family: "Times New Roman", Times, serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1rem;
  }
  
  .garden-description {
    font-size: 0.95rem;
    color: #6b7280;
    max-width: 800px;
    line-height: 1.5;
    margin: 0 0 1.5rem;
  }
  
  .growth-stages-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }
  
  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .legend-icon {
    font-size: 1.25rem;
  }
  
  .legend-text {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .garden-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 0.2rem;
  }
  
  .section-title {
    font-size: 1rem;
    font-weight: 600;
    color: #7B7B7A;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-sans, 'Inter', sans-serif);
  }
  
  .filter-controls {
    display: flex;
    gap: 0.75rem;
  }
  
  .filter-dropdown {
    position: relative;
  }
  
  .filter-dropdown select {
    appearance: none;
    background-color: transparent;
    border: 1px solid #e5e7eb;
    padding: 0.35rem 2rem 0.35rem 0.75rem;
    font-size: 0.75rem;
    color: #6b7280;
    border-radius: 0;
    cursor: pointer;
    font-family: var(--font-sans, 'Inter', sans-serif);
  }
  
