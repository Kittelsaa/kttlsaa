const portfolioItems = [
  { 
    title: "In-house HR project for CSR ltd.",
    description:"Worked as Software Engineer at CSR ltd. in building a back office tool to streamline operations. React, TypeScript, and Django were used to manage HR data, authentication, and API support for operational workflows.",
    image: "https://res.cloudinary.com/djjc0kf4h/image/upload/v1750150364/csr-hr_xckxkg.png",
    link: "https://www.csrlimited.com/",
  },
  {
    title: "Data Integration System for BEBC Canada",
    description:"Worked with a talented group of developers as the Technical Lead & Project Manager to replace inefficient WordPress form systems with embedded Microsoft Dynamics Marketing Forms.¬†",
    image: "https://res.cloudinary.com/djjc0kf4h/image/upload/v1750149996/bebc_epgbcf.png",
    link: "https://www.blackentrepreneursbc.org/",
  },
  {
