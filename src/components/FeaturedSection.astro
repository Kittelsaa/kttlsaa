---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  reversed?: boolean;
}

const { title, subtitle, class: className = "", reversed = false } = Astro.props;
---

<section class:list={["featured-section", reversed && "reversed", className]}>
  <div class="featured-content">
    <h2 class="featured-title font-fun">{title}</h2>
    {subtitle && <p class="featured-subtitle">{subtitle}</p>}
    <div class="featured-text">
      <slot name="text" />
    </div>
  </div>
  <div class="featured-media">
    <slot name="media" />
  </div>
</section>

<style>
  .featured-section {
    display: flex;
    gap: var(--space-2xl);
    margin: var(--space-3xl) 0;
    align-items: center;
  }
  
  .reversed {
    flex-direction: row-reverse;
  }
  
  .featured-content, .featured-media {
    flex: 1;
  }
  
  .featured-title {
    font-size: 3rem;
    line-height: 1.1;
    margin-bottom: var(--space-m);
    font-weight: 400;
  }
  
  .featured-subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin-bottom: var(--space-l);
  }
  
  @media (max-width: 768px) {
    .featured-section {
      flex-direction: column;
      gap: var(--space-xl);
    }
    
    .reversed {
      flex-direction: column;
    }
    
    .featured-title {
      font-size: 2.5rem;
    }
  }
</style>