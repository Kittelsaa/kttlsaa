---
interface Props {
  title?: string;
  description?: string;
  class?: string;
  buttonText?: string;
}

const { 
  title = "Stay Updated", 
  description = "Subscribe to receive updates when I add new notes, essays, or projects to this digital garden.",
  class: className = "",
  buttonText = "SUBSCRIBE"
} = Astro.props;
---

<div class:list={["subscribe-container", className]}>
  <div class="subscribe-content">
    <h2 class="subscribe-title">{title}</h2>
    <p class="subscribe-description">{description}</p>
    
    <form class="subscribe-form" action="#" method="post">
      <div class="input-wrapper">
        <input 
          type="email" 
          name="email" 
          placeholder="Your email address" 
          required
          aria-label="Email address"
          style="width: 100%; max-width: 300px; padding: 0.75rem 2rem; border: 1px solid var(--color-border); border-radius: 50px; font-size: 1rem; outline: none; box-sizing: border-box; margin: 0 auto; display: block;"
        />
      </div>
      <div class="button-wrapper" style="display: flex; justify-content: center; margin-top: 1rem;">
        <button 
          type="submit" 
          style="display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 2rem; border-radius: 50px; text-decoration: none; font-family: var(--font-fun); font-size: 1.1rem; transition: all 0.3s ease; min-width: 200px; max-width: 300px; width: 100%; text-align: center; font-weight: normal; background-color: white; color: black; border: 1px solid black; cursor: pointer;"
          aria-label="Subscribe"
        >
          {buttonText}
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .subscribe-container {
    margin: 2rem 0;
    width: 100%;
  }
  
  .subscribe-content {
    width: 100%;
  }
  
  .subscribe-title {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .subscribe-description {
    margin-bottom: 1.5rem;
    color: #555;
    max-width: 600px;
  }
  
  .subscribe-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }
</style>