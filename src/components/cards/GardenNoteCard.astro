---
import { formatDate } from "../../utils/dates";

const { note } = Astro.props;

// Format the date
const formattedDate = formatDate(note.data.updated || note.data.startDate);

// Growth stage emojis
const growthEmojis = {
  "seedling": "ðŸŒ±",
  "budding": "ðŸŒ¿",
  "evergreen": "ðŸŒ²"
};

// Get the appropriate emoji
const growthEmoji = growthEmojis[note.data.growthStage?.toLowerCase()] || "ðŸŒ±";

// Determine note type - default to "Note" if not specified
const noteType = note.data.type || "Note";

// Ensure we have a valid slug
const noteSlug = note.slug || note.id.split('/').pop().replace(/\.(md|mdx)$/, '');
---

<div class="garden-note-card" 
  data-date={note.data.updated} 
  data-growth-stage={note.data.growthStage} 
  data-topics={note.data.topics?.join(',')}
  data-type={noteType}>
  <a href={`/notes/${noteSlug}`} class="note-link">
    <h3 class="title">{note.data.title}</h3>
    <div class="meta">
      <div class="growth-stage">â†’ {growthEmoji} {note.data.growthStage}</div>
      <div class="date">{formattedDate}</div>
    </div>
  </a>
</div>

<style>
  .garden-note-card {
    margin-bottom: 3rem;
  }
  
  .note-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    font-family: "Times New Roman", Times, serif;
    color: #000;
    line-height: 1.3;
  }
  
  .note-link:hover .title {
    color: var(--color-accent, #ff8c00);
  }
  
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: #6b7280;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 1rem;
  }
  
  .growth-stage {
    color: #6b7280;
    font-style: italic;
    text-transform: capitalize;
  }
  
  .date {
    color: #6b7280;
  }
  
  @media (max-width: 768px) {
    .garden-note-card {
      margin-bottom: 2rem;
    }
    
    .title {
      font-size: 1.25rem;
    }
  }
</style>

