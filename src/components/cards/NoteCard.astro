---
import { formatDate } from "../../utils/dates";

const { note } = Astro.props;

// Format the date
const formattedDate = formatDate(note.data.updated || note.data.startDate);

// Ensure we have a valid slug
const noteSlug = note.slug || note.id.split('/').pop().replace(/\.(md|mdx)$/, '');
---

<div class="note-card" 
  data-date={note.data.updated} 
  data-growth-stage={note.data.growthStage} 
  data-topics={note.data.topics?.join(',')}>
  <a href={`/notes/${noteSlug}`} class="note-link">
    <h3 class="title">{note.data.title}</h3>
    <div class="meta">
      <div class="growth-stage">{note.data.growthStage}</div>
      <div class="date">{formattedDate}</div>
    </div>
  </a>
</div>

<style>
  .note-card {
    margin-bottom: 2.5rem;
    transition: transform 0.2s ease;
  }
  
  .note-link {
    display: block;
    text-decoration: none;
    color: #1f2937;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
    transition: all 0.2s ease;
  }
  
  .note-link:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent, #ff8c00);
  }
  
  .title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
    font-family: var(--font-heading, 'Times New Roman', Times, serif);
    color: #1f2937;
    line-height: 1.3;
  }
  
  .note-link:hover .title {
    color: var(--color-accent, #ff8c00);
  }
  
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .topic-tag {
    color: #6b7280;
    margin-right: 0.5rem;
  }
  
  .date {
    color: #6b7280;
  }
  
  @media (max-width: 768px) {
    .title {
      font-size: 1.25rem;
    }
    
    .meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>









