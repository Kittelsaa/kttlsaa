---
interface Props {
  level?: 3 | 4 | 5 | 6;
  class?: string;
  italic?: boolean;
}

const { 
  level = 3, 
  class: className = "",
  italic = false
} = Astro.props;

// Dynamically create the heading element based on level
const HeadingTag = `h${level}`;
---

<HeadingTag class:list={["fun-subtitle", italic && "italic", className]}>
  <slot />
</HeadingTag>

<style>
  .fun-subtitle {
    font-family: var(--font-fun);
    font-weight: 300;
    color: var(--color-text);
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .italic {
    font-style: italic;
  }

  h3.fun-subtitle {
    font-size: 1.5rem;
  }

  h4.fun-subtitle {
    font-size: 1.25rem;
  }

  h5.fun-subtitle, h6.fun-subtitle {
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    h3.fun-subtitle {
      font-size: 1.25rem;
    }
    
    h4.fun-subtitle {
      font-size: 1.1rem;
    }
    
    h5.fun-subtitle, h6.fun-subtitle {
      font-size: 1rem;
    }
  }
</style>