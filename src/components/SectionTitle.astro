---
interface Props {
  level?: 2 | 3;
  class?: string;
  centered?: boolean;
}

const { 
  level = 2, 
  class: className = "",
  centered = false
} = Astro.props;

const HeadingTag = `h${level}`;
---

<HeadingTag class:list={["section-title", "font-fun", centered && "centered", className]}>
  <slot />
</HeadingTag>

<style>
  .section-title {
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-l);
    position: relative;
  }
  
  h2.section-title {
    font-size: 2.8rem;
    line-height: 1.1;
  }
  
  h3.section-title {
    font-size: 2.2rem;
    line-height: 1.2;
  }
  
  .centered {
    text-align: center;
  }
  
  @media (max-width: 768px) {
    h2.section-title {
      font-size: 2.2rem;
    }
    
    h3.section-title {
      font-size: 1.8rem;
    }
  }
</style>