---
interface Backlink {
  title: string;
  slug: string;
  growthStage: 'seedling' | 'budding' | 'evergreen';
}

interface Props {
  backlinks: Backlink[];
}

import GrowthIcon from './GrowthIcon.astro';
const { backlinks } = Astro.props;
---

<div class="backlinks-container">
  <h3 class="backlinks-title">Connected Notes</h3>
  
  {backlinks.length === 0 ? (
    <p class="no-backlinks">No other notes link to this one yet.</p>
  ) : (
    <ul class="backlinks-list">
      {backlinks.map(link => (
        <li class="backlink-item">
          <a href={`/notes/${link.slug}`} class="backlink">
            <span class="growth-stage">
              <GrowthIcon growthStage={link.growthStage} showEmoji={true} />
            </span>
            <span class="title">{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  )}
</div>

<style>
  .backlinks-container {
    padding: var(--space-m, 1rem) 0;
  }
  
  .backlinks-title {
    font-size: 1.25rem;
    margin-top: 0;
    margin-bottom: var(--space-s, 0.75rem);
    font-weight: 600;
    color: #1f2937;
  }
  
  .backlinks-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .backlink-item {
    margin-bottom: var(--space-xs, 0.5rem);
  }
  
  .backlink {
    display: flex;
    align-items: center;
    gap: var(--space-2xs, 0.25rem);
    text-decoration: none;
    color: #2563eb;
    padding: var(--space-2xs, 0.25rem) 0;
  }
  
  .backlink:hover {
    text-decoration: underline;
  }
  
  .growth-stage {
    display: flex;
    align-items: center;
  }
  
  .title {
    font-size: 1rem;
  }
  
  .no-backlinks {
    font-size: 0.9rem;
    color: #6b7280;
    font-style: italic;
  }
</style>





