---
interface Backlink {
  title: string;
  slug: string;
  growthStage: 'seedling' | 'budding' | 'evergreen';
}

interface Props {
  backlinks: Backlink[];
}

import GrowthIcon from './GrowthIcon.astro';
const { backlinks } = Astro.props;
---

<div class="backlinks">
  <h3>Referenced by</h3>
  
  {backlinks.length === 0 ? (
    <p class="no-backlinks">No other notes link to this one yet.</p>
  ) : (
    <ul>
      {backlinks.map(link => (
        <li>
          <a href={`/notes/${link.slug}`} class="backlink">
            <span class="growth-stage">
              <GrowthIcon growthStage={link.growthStage} />
            </span>
            <span class="title">{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  )}
</div>

<style>
  .backlinks {
    margin-top: var(--space-l);
    padding: var(--space-m);
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-m);
  }
  
  h3 {
    font-size: 1.2rem;
    margin-bottom: var(--space-s);
    color: var(--color-text);
  }
  
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  li {
    margin-bottom: var(--space-xs);
  }
  
  .backlink {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.2s ease;
  }
  
  .backlink:hover {
    color: var(--color-accent);
  }
  
  .growth-stage {
    display: flex;
    align-items: center;
  }
  
  .no-backlinks {
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>


