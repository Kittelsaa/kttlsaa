<style>
  .about-me {
    display: flex;
    flex-direction: column;
    gap: var(--space-l);
    max-width: 100%; /* Use full width */
    margin: 0;
    padding-bottom: var(--space-4xl);
  }
  
  .section-title {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-s);
    color: #6b7280;
    font-weight: 600;
    text-align: left;
  }
  
  .social-list {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-m);
  }
  
  .social-list li {
    margin-right: var(--space-m);
  }
  
  .social-list a {
    color: #000;
    text-decoration: none;
    border-bottom: 1px solid #000;
    transition: all 0.2s ease;
  }
  
  .social-list a:hover {
    color: #ff8c00;
    border-bottom-color: #ff8c00;
  }
  
  .philosophy-paragraph {
    font-weight: 500;
    font-style: italic;
    color: #ff8c00;
    max-width: 100%; /* Use full width */
  }
  
  p {
    margin-bottom: var(--space-m);
    line-height: 1.8; /* Increased for better readability */
    font-size: 1.05rem;
    max-width: 100%; /* Use full width */
  }
  
  .philosophy-section {
    margin-top: var(--space-m);
  }
  
  @media (max-width: 768px) {
    .about-me {
      gap: var(--space-m);
      padding-bottom: var(--space-2xl);
    }
    
    p {
      font-size: 1rem;
      margin-bottom: var(--space-s);
    }
    
    .section-title {
      font-size: 1rem;
    }
    
    .social-list {
      gap: var(--space-s);
    }
    
    .social-list li {
      margin-right: var(--space-s);
    }
  }
  
  @media (max-width: 480px) {
    .about-me {
      gap: var(--space-s);
    }
    
    p {
      font-size: 0.95rem;
    }
    
    .section-title {
      font-size: 0.9rem;
    }
    
    .social-list {
      flex-direction: column;
      gap: var(--space-xs);
    }
    
    .social-list li {
      margin-right: 0;
    }
  }
  /* Add more spacing between sections */
  .contact-section, .philosophy-section {
    margin-bottom: var(--space-xl, 0rem);
  }
  .social-section {
    margin-bottom: var(--space-xl, 0.8rem);
  }
  
  /* Increase spacing between paragraphs */
  p {
    margin-bottom: var(--space-m, 1.5rem);
  }
  
  /* Ensure section titles have enough space */
  .section-title {
    margin-bottom: var(--space-m, 1.5rem);
  }
</style>
