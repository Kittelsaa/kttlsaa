---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className = "" } = Astro.props;
---

<div class:list={["hero", className]}>
  <div class="hero-content">
    <h1 class="hero-title font-fun">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    <div class="hero-actions">
      <slot />
    </div>
  </div>
</div>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    text-align: center;
    background-color: var(--color-surface);
    border-radius: 8px;
    margin-bottom: var(--space-2xl);
  }
  
  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-l);
  }
  
  .hero-title {
    font-size: 4rem;
    line-height: 1.1;
    margin-bottom: var(--space-l);
    color: var(--color-text);
    font-weight: 400;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    line-height: 1.5;
    margin-bottom: var(--space-xl);
    color: var(--color-secondary);
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-m);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: var(--space-2xl) 0;
    }
    
    .hero-title {
      font-size: 3rem;
    }
    
    .hero-subtitle {
      font-size: 1.25rem;
    }
  }
</style>