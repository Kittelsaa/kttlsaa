---
interface Props {
  subtitle?: string;
  class?: string;
}

const { subtitle, class: className = "" } = Astro.props;
---

<div class:list={["page-title-container", className]}>
  <h1 class="page-title font-fun"><slot /></h1>
  {subtitle && <p class="page-subtitle">{subtitle}</p>}
</div>

<style>
  .page-title-container {
    margin-bottom: var(--space-2xl);
    text-align: center;
  }
  
  .page-title {
    font-size: 3.5rem;
    line-height: 1.1;
    font-weight: 400;
    margin-bottom: var(--space-m);
    color: var(--color-text);
  }
  
  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary);
    max-width: 800px;
    margin: 0 auto;
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }
    
    .page-subtitle {
      font-size: 1.1rem;
    }
  }
</style>