---
const { growthStage, showEmoji = true } = Astro.props;

// Define colors for each growth stage
const colors = {
  seedling: "#10b981", // Green
  budding: "#3b82f6",  // Blue
  evergreen: "#8b5cf6" // Purple
};

// Define emojis for each growth stage
const emojis = {
  seedling: "🌱", // Seedling
  budding: "🪴",  // Potted plant
  evergreen: "🌳" // Tree
};

const color = colors[growthStage?.toLowerCase()] || colors.seedling;
const emoji = emojis[growthStage?.toLowerCase()] || emojis.seedling;
---

{showEmoji ? (
  <span class="growth-icon" style={`color: ${color};`}>{emoji}</span>
) : (
  <span class="growth-icon" style={`color: ${color};`}>●</span>
)}

<style>
  .growth-icon {
    display: inline-block;
    font-size: 1em;
    line-height: 1;
  }
</style>


