---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary';
  icon?: 'arrow' | 'logo' | 'none';
  class?: string;
  as?: 'a' | 'button';
  type?: 'button' | 'submit' | 'reset';
}

const { 
  href = '#', 
  variant = 'primary', 
  icon = 'none', 
  class: className = '',
  as = 'a',
  type = 'button'
} = Astro.props;

const Element = as;
---

{as === 'a' ? (
  <a href={href} class:list={['home-button', variant, className]} style="font-family: 'Averia Serif Libre', serif !important;">
    <span class="button-text"><slot /></span>
    {icon === 'arrow' && <span class="icon arrow">→</span>}
    {icon === 'logo' && <span class="icon"><img src="/images/lg.png" alt="KTTLSAA Logo" class="logo-icon" /></span>}
  </a>
) : (
  <button type={type} class:list={['home-button', variant, className]} style="font-family: 'Averia Serif Libre', serif !important;">
    <span class="button-text"><slot /></span>
    {icon === 'arrow' && <span class="icon arrow">→</span>}
    {icon === 'logo' && <span class="icon"><img src="/images/lg.png" alt="KTTLSAA Logo" class="logo-icon" /></span>}
  </button>
)}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Averia+Serif+Libre:wght@300;400;700&display=swap');
  
  .home-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.7rem;
    border-radius: 0px;
    font-weight: 500;
    text-decoration: none;
    font-family: 'Averia Serif Libre', serif !important;
    font-size: 1rem;
    transition: all 0.3s ease;
    min-width: 200px;
    text-align: center;
    font-weight: normal;
  }
  
  .button-text {
    line-height: 1.2;
    font-family: 'Averia Serif Libre', serif !important;
    font-weight: 400;
  }

  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-left: 0.1rem;
  }

  .arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .logo-icon {
    height: 22px;
    width: auto;
    vertical-align: middle;
  }

  /* Primary button - white with black border */
  .primary {
    background-color: white;
    color: black;
    border: 1px solid black;
  }

  /* Secondary button - orange */
  .secondary {
    background-color: #FF9B5A;
    color: black;
    border: none;
  }

</style>

<style is:global>
  /* Force Averia font on all home buttons */
  .home-button,
  .home-button span,
  .home-button .button-text {
    font-family: 'Averia Serif Libre', serif !important;
  }
</style>


















